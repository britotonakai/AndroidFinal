<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:minWidth="400dp"
    android:minHeight="500dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!--        <Button-->
        <!--            android:id="@+id/btnEditSave"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="0"-->
        <!--            android:background="#00FFFFFF"-->
        <!--            android:backgroundTint="#00FFFFFF"-->
        <!--            android:drawableLeft="@drawable/baseline_save_24"-->
        <!--            android:text="Save"-->
        <!--            android:textColor="@color/black" />-->

        <!--        <LinearLayout-->
        <!--            android:id="@+id/spacingLayout"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:orientation="horizontal"></LinearLayout>-->

        <ImageButton
            android:id="@+id/btnEditPen"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="0"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_create_24" />

        <ImageButton
            android:id="@+id/btnEditTable"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_list_alt_24" />

        <ImageButton
            android:id="@+id/btnEditImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_image_24" />

        <ImageButton
            android:id="@+id/btnEditBulletList"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_format_list_bulleted_24" />

        <ImageButton
            android:id="@+id/btnEditCheckList"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_checklist_24" />

        <ImageButton
            android:id="@+id/btnEditShare"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_ios_share_24" />

        <ImageButton
            android:id="@+id/btnEditBold"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/baseline_format_bold_24" />

        <ImageButton
            android:id="@+id/btnEditUnderline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/baseline_format_underlined_24" />

        <ImageButton
            android:id="@+id/btnEditItalic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/baseline_format_italic_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnEditHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Heading"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btnEditSubheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Subheading"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnEditBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Body"
            android:clickable="true"
            android:textSize="16sp"
            android:textColor="@color/black"  />

        <ImageButton
            android:id="@+id/btnEditAlignLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingStart="5dp"
            app:srcCompat="@drawable/baseline_format_indent_increase_24" />

        <ImageButton
            android:id="@+id/btnEditAlignRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingStart="5dp"
            app:srcCompat="@drawable/baseline_format_indent_decrease_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewEditCurrentDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="18:00 PM, 19 March, 2023"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Your current title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editContent"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="bottom|end">

        <Button
            android:id="@+id/btnConfirmEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="#F9BFB6"
            android:text="Edit"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#CCD5AE"
            android:text="Cancel"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>